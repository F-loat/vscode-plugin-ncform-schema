{
  "name": "vscode-plugin-ncform-schema",
  "displayName": "NcForm Schema Editor",
  "description": "ncform schema editor plugin for vscode",
  "version": "0.0.1",
  "publisher": "F-loat",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:ncformSchema.edit",
    "onCustomEditor:ncformSchema.editor"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/F-loat/vscode-plugin-ncform-schema.git"
  },
  "main": "./out/extension/index.js",
  "contributes": {
    "commands": [
      {
        "command": "ncformSchema.edit",
        "title": "Open with ncform schema editor",
        "icon": {
          "light": "./media/edit-light.svg",
          "dark": "./media/edit-dark.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == json",
          "command": "ncformSchema.edit",
          "group": "navigation"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "ncformSchema.editor",
        "displayName": "NcFrom Schema Editor",
        "selector": [
          {
            "filenamePattern": "*.json"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run build",
    "serve": "vue-cli-service serve src/web/main.js",
    "build": "vue-cli-service build src/web/main.js",
    "compile": "tsc -p ./src/extension",
    "watch": "tsc -w -p ./src/extension",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "dependencies": {
    "@ncform/ncform-common": "^1.7.0",
    "core-js": "^3.6.5",
    "element-ui": "^2.13.2",
    "lodash-es": "^4.17.15",
    "vue": "^2.6.11",
    "vuedraggable": "^2.23.2"
  },
  "devDependencies": {
    "@types/node": "^12.12.0",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "@vue/cli-plugin-babel": "~4.4.0",
    "@vue/cli-service": "~4.4.0",
    "babel-plugin-component": "^1.1.1",
    "eslint": "^7.1.0",
    "sass": "^1.26.5",
    "sass-loader": "^8.0.2",
    "typescript": "^3.9.4",
    "vue-template-compiler": "^2.6.11"
  }
}
